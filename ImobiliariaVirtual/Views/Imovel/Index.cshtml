@model IEnumerable<Imovel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Imóveis</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Imovel" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Criar Novo Imovel
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tipo do imóvel
                </th>
                <th>
                    Valor de Venda
                </th>
                <th>
                    Operações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Tipo
                    </td>
                    <td width="30%">
                        R$@obj.ValorVenda.ToString("N")
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Imovel" asp-action="Detail" asp-route-id="@obj.Id"
                               class="btn btn-info mx-2"> <i class="bi bi-three-dots"></i> Detalhes</a>
                            <a asp-controller="Imovel" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-controller="Imovel" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>